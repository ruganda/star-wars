{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["DOM"],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "removeComments": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src", "test", "test/results/*.json", "app.js"]
}
